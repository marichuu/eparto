{% extends "themes/default/layout.html.twig" %}
{% block title %}
    PDE  {{ parent() }}
{% endblock %}

{% block content %}
    {% set pietable = '' %}

    <div class="wrapper">
        <br>
        <div class="row">
            {{ getMessages()|raw }}
        </div>
        <div class="widget">
            <div id="user-stats">
                <ul class="round-buttons">
                    <li><div class="depth"><a href="{{site_url('femme/add')}}" title="Ajouter une femme" class="tip"><i class="icon-plus"></i></a></div></li>
                </ul>
            </div>
            <div class="well row-fluid">
                <div  id="framework-content">
                    <div class="tabbable"><!-- default tabs -->
                        {% include "home/tab1.html.twig" %}
                        <div class="tab-content">
                            <div class="tab-pane active" id="tab1">                              
                                <div id="impactCreate">
                                    <form id="validate" class="form-horizontal" action="{{ site_url("evenement/pde") }}" method="post"> 
                                        <input type="hidden" value="{{femme.id}}" class="span4" name="femme_id" id="femme_id"/>
                                        <fieldset class="form-horizontal">
                                            <div>
                                                <div class="navbar"><div class="navbar-inner"><h6>PDE</h6><span style="float: right">&nbsp;&nbsp;&nbsp;</span></div></div>
                                                <div class="well row-fluid">
                                                    <div class="control-group">
                                                        <div class="row-fluid"> 
                                                            <div class="control-group">
                                                                <label class="control-label">Liquide amniotique: <span class="text-error">*</span></label>
                                                                <div class="controls">
                                                                    <div class="span12">
                                                                        <select  id="pde"  name="value" class="validate[required]">
                                                                            <option value="">-- Choisir le PDE --</option> 
                                                                            <option value="1" alt="" {{ set_select('1')}}>Intacte ou liq. clair</option>
                                                                            <option value="2" alt="" {{ set_select('2')}}>Liq. teinté</option>
                                                                            <option value="3" alt="" {{ set_select('3')}}>Rompue 12H</option>
                                                                        </select>
                                                                    </div>
                                                                </div>
                                                            </div>
                                                            <div class="control-group">
                                                                <label class="control-label">Chevauchement: </label>
                                                                <div class="controls">
                                                                    <div class="span12">
                                                                        <input type="text" name="chevauchement" value="" >
                                                                    </div>
                                                                </div>
                                                            </div>
                                                        </div>
                                                    </div>
                                                    <div class="form-actions align-right">
                                                        <button type="submit" class="btn btn-success"><i class="fam-accept"></i>Enregistrer</button>
                                                    </div>   
                                                </div> 
                                            </div>
                                        </fieldset>
                                    </form>
                                    <table class="table table-striped table-bordered" >
                                        <thead>
                                            <tr>
                                                <th>Fais à</th>
                                                <th>Liquide Amniotique</th>
                                                <th>Chevauchement</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {% for p in pdes %}
                                                <tr>
                                                    <td>{{ p.createdDate|date("H:i") }}</td>
                                                    <td>{% if(p.value==1) %} Intacte ou liq. clair {% elseif(p.value==2) %} Liq. teinté {% elseif(p.value==3) %} Rompue 12h {% endif %}  </td>
                                                    <td>{{ p.chevauchement }}</td>
                                                </tr>
                                            {% endfor %}  
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            <div class="tab-pane" id="tab2">                               
                                <div id="outcomeCreate">

                                </div>
                            </div>
                            <div class="tab-pane" id="tab3" >           
                                <div id="outputCreate">

                                </div>
                            </div>
                            <div class="form-actions align-right">
                                <a href="{{site_url("home/home")}}" <button type="" class="btn btn-inverse"> <i class="ico-arrow-left"></i>{{'Quiter'}}</button>  </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>{% endblock %}
